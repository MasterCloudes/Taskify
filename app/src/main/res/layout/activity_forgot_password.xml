<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_purple_50_background"
    tools:context=".auth.ForgotPasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_blue_100_background"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_key_round"
                        app:tint="@color/blue_600"
                        android:contentDescription="Forgot Password Icon" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu"
                    android:textSize="20sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập thông tin để xác thực"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"/>
            </LinearLayout>

            <!-- Username Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên đăng nhập"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_username_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="Nhập tên đăng nhập"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_marginTop="4dp"
                    android:inputType="text" />
                <TextView
                    android:id="@+id/tv_username_error_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_500"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Error message" />
            </LinearLayout>

            <!-- Email Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_email_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="Nhập email"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_marginTop="4dp"
                    android:inputType="textEmailAddress" />
                <TextView
                    android:id="@+id/tv_email_error_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_500"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Error message" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác thực"
                android:backgroundTint="@color/blue_600"
                android:textColor="@android:color/white"
                android:paddingVertical="10dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_back_to_login_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quay lại đăng nhập"
                android:textColor="@color/blue_600"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
