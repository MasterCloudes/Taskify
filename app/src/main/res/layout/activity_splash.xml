<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash_background"
    tools:context=".Screen.SplashActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/splash_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="16dp"
            android:background="@drawable/rounded_white_background"
            android:src="@drawable/ic_check_square"
            app:tint="@color/blue_600"
            android:contentDescription="TaskMaster Icon"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TaskMaster"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:letterSpacing="0.08" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
